<?xml version="1.0" encoding="UTF-8"?>
<table>
    <name>YumSalesForecast</name>
    <description>Sales forecast and adjustment for Yum</description>
    <owners>owner1;owner2</owners>
    <columns>
        <column>
            <name>District</name>
            <type>String</type>
            <displayName>大区</displayName>
        </column>
        <column>
            <name>Province</name>
            <type>String</type>
            <displayName>省</displayName>
        </column>
        <column>
            <name>City</name>
            <type>String</type>
            <displayName>市</displayName>
        </column>
        <column>
            <name>DistributionCenter</name>
            <type>String</type>
            <displayName>DC</displayName>
        </column>
        <column>
            <name>Item</name>
            <type>String</type>
            <displayName>Saleable Item</displayName>
        </column>
        <column>
            <name>Category</name>
            <type>String</type>
            <displayName>大类</displayName>
        </column>
        <column>
            <name>Subcategory</name>
            <type>String</type>
            <displayName>中类</displayName>
        </column>
        <column>
            <name>DetailCategory</name>
            <type>String</type>
            <displayName>小类</displayName>
        </column>
        <column>
            <name>SalesType</name>
            <type>String</type>
            <displayName>销售类型</displayName>
        </column>
        <column>
            <name>SalesDate</name>
            <type>DateTime</type>
            <displayName>日期</displayName>
        </column>
        <column>
            <name>HistoricalSalesNumber</name>
            <type>Integer</type>
            <displayName>历史SR</displayName>
            <isMeasure>true</isMeasure>
        </column>
        <column>
            <name>ForecastSalesNumber</name>
            <type>Integer</type>
            <displayName>SR预测</displayName>
            <isMeasure>true</isMeasure>
        </column>
        <column>
            <name>MarketingAdjustment</name>
            <type>Integer</type>
            <displayName>Category与Marketing调整</displayName>
            <isMeasure>true</isMeasure>
            <isEditable>true</isEditable>
        </column>
        <column>
            <name>DemandPlannerAdjustment</name>
            <type>Integer</type>
            <displayName>Demand Planner 调整</displayName>
            <isMeasure>true</isMeasure>
            <isEditable>true</isEditable>
        </column>
        <column>
            <name>ConsensusForecast</name>
            <type>Integer</type>
            <displayName>Consensus Forecast</displayName>
            <isMeasure>true</isMeasure>
        </column>
    </columns>
    <!-- Dimension Column should always be String type-->
    <dimensions>
        <dimension>
            <name>Location</name>
            <displayName>地点</displayName>
            <levels>
                <level>District</level>
                <level>Province</level>
                <level>City</level>
                <level>DistributionCenter</level>
            </levels>
        </dimension>
        <dimension>
            <name>ItemType</name>
            <displayName>物品类型</displayName>
            <levels>
                <level>Category</level>
                <level>Subcategory</level>
                <level>DetailCategory</level>
                <level>Item</level>
            </levels>
        </dimension>
        <dimension>
            <name>DateTime</name>
            <displayName>年月日</displayName>
            <levels>
                <level>Year(SalesDate)</level>
                <level>Month(SalesDate)</level>
                <level>SalesDate</level>
            </levels>
        </dimension>
        <dimension>
            <name>DateTimeInWeek</name>
            <displayName>年周日</displayName>
            <levels>
                <level>Year(SalesDate)</level>
                <level>Week(SalesDate)</level>
                <level>SalesDate</level>
            </levels>
        </dimension>
    </dimensions>
</table>
